<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.CardViewTitleAboveImage" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/accent</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textSize">@dimen/card_view_title_text_size</item>
    </style>

    <style name="AppTheme.CardViewSubTitleAboveImage" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/accent</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textSize">@dimen/card_view_subtitle_text_size</item>
    </style>

    <style name="AppTheme.CommLinkDate" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/accent</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="AppTheme.CardViewTitle" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:paddingTop">@dimen/card_view_title_text_padding_top_bottom</item>
        <item name="android:paddingLeft">@dimen/card_view_title_text_padding_sides</item>
        <item name="android:paddingStart">@dimen/card_view_title_text_padding_sides</item>
        <item name="android:paddingRight">@dimen/card_view_title_text_padding_sides</item>
        <item name="android:paddingEnd">@dimen/card_view_title_text_padding_sides</item>
        <item name="android:textSize">@dimen/card_view_title_text_size</item>
    </style>

    <style name="AppTheme.CardViewSubTitle" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:paddingTop">@dimen/card_view_subtitle_text_padding_top</item>
        <item name="android:paddingLeft">@dimen/card_view_subtitle_text_padding_sides</item>
        <item name="android:paddingStart">@dimen/card_view_subtitle_text_padding_sides</item>
        <item name="android:paddingRight">@dimen/card_view_subtitle_text_padding_sides</item>
        <item name="android:paddingEnd">@dimen/card_view_subtitle_text_padding_sides</item>
        <item name="android:textSize">@dimen/card_view_subtitle_text_size</item>
    </style>

    <style name="AppTheme.CardViewSupportingText" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:paddingTop">@dimen/card_view_supporting_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/card_view_supporting_text_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/card_view_supporting_text_padding</item>
        <item name="android:paddingRight">@dimen/card_view_supporting_text_padding</item>
        <item name="android:paddingStart">@dimen/card_view_supporting_text_padding</item>
        <item name="android:paddingEnd">@dimen/card_view_supporting_text_padding</item>
        <item name="android:textSize">@dimen/card_view_supporting_text_size</item>
    </style>

    <style name="AppTheme.CardViewRowItem" parent="AppTheme">
        <item name="android:paddingTop">@dimen/card_view_row_item_top_padding</item>
        <item name="android:paddingLeft">@dimen/card_view_supporting_text_padding</item>
        <item name="android:paddingStart">@dimen/card_view_supporting_text_padding</item>
        <item name="android:paddingRight">@dimen/card_view_supporting_text_padding</item>
        <item name="android:paddingEnd">@dimen/card_view_supporting_text_padding</item>
    </style>

    <style name="AppTheme.CardViewRowItemColumnLeft" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_width">@dimen/card_view_row_item_left_column_width</item>
    </style>

    <style name="AppTheme.CardViewRowItemColumnRight" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.UserSearchHistoryEntry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="AppTheme.UserSearchHistoryEntry.Avatar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.userFragmentSuccessfulSearchHistoryLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">90dp</item>
    </style>

    <style name="AppTheme.countryFlagImageStyle">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="AppTheme.ForumThreadListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="AppTheme.ForumThreadListItem.Avatar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="riv_border_color">#333333</item>
        <item name="riv_border_width">2dip</item>
        <item name="riv_corner_radius">30dip</item>
        <item name="riv_mutate_background">true</item>
        <item name="riv_oval">true</item>
        <item name="riv_tile_mode">repeat</item>
    </style>

    <style name="AppTheme.EmbeddedIcon">
        <item name="android:alpha">30</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AppTheme.EmbeddedIconValueText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="AppTheme.WidgetStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/widget_margin</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.WidgetHeaderStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.WidgetItemDateTextView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="AppTheme.WidgetItemTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="AppTheme.PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/window_enter</item>
        <item name="android:windowExitAnimation">@anim/window_exit</item>
    </style>

</resources>
