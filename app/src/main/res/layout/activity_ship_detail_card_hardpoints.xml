            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/AppTheme.CardViewRowItemColumnLeft"
                android:layout_height="wrap_content"
                android:text="@string/ship_detail_card_hardpoints_c9" />

            <TextView
                android:id="@+id/shipDetailCardHardpointsC9TextView"
                style="@style/AppTheme.CardViewRowItemColumnRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Lorem Ipsum gun" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>