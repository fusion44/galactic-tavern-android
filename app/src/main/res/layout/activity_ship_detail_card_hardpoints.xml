                android:id="@+id/shipDetailCardHardpointsC6TextView"
                style="@style/AppTheme.CardViewRowItemColumnRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1x Automatic PDG Gun" />
        </LinearLayout>

        <LinearLayout
            style="@style/AppTheme.CardViewRowItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/AppTheme.CardViewRowItemColumnLeft"
                android:layout_height="wrap_content"
                android:text="@string/ship_detail_card_hardpoints_c7" />

            <TextView
                android:id="@+id/shipDetailCardHardpointsC7TextView"
                style="@style/AppTheme.CardViewRowItemColumnRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2x S4 - 3x 4- Lookup  \n2x S4 - 3x 4- Lookup" />
        </LinearLayout>

        <LinearLayout
            style="@style/AppTheme.CardViewRowItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
