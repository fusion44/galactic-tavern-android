<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.UserSearchHistoryEntry">

    <ImageView
        android:id="@+id/userSearchHistoryAvatarImage"
        style="@style/AppTheme.UserSearchHistoryEntry.Avatar"
        android:contentDescription="@string/content_desc_user_avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userSearchHistoryHandle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:background="?attr/selectableItemBackground"
            android:ellipsize="end"
            android:textAppearance="?android:attr/textAppearanceSearchResultTitle"
            tools:text="Large Text" />

        <TextView
            android:id="@+id/userSearchHistoryEntryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle"
            tools:text="Large Text" />
    </LinearLayout>
</LinearLayout>