<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shipDetailCardMainTitle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/card_view_margin_bottom"
    android:elevation="@dimen/card_view_rested_elevation_state"
    card_view:cardCornerRadius="@dimen/card_view_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/shipDetailCardTitleTextView"
            style="@style/AppTheme.CardViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="M50 Interceptor" />

        <TextView
            android:id="@+id/shipDetailCardSubtitleTextView"
            style="@style/AppTheme.CardViewSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="by Origin Jumpworks GmbH" />

        <TextView
            android:id="@+id/shipDetailCardDescriptionTextView"
            style="@style/AppTheme.CardViewSupportingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="If you want to get from point A to point B as quickly as possible and with as much style as possible then ORIGIN's M50 is for you. Featuring supercharged engines that counter a tiny weapons loadout, the M50 is a ship for going FAST." />

        <LinearLayout
            style="@style/AppTheme.CardViewRowItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/AppTheme.CardViewRowItemColumnLeft"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/ship_detail_card_production_state" />

            <TextView
                android:id="@+id/shipDetailCardProductionStateTextView"
                style="@style/AppTheme.CardViewRowItemColumnRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Ready!" />
        </LinearLayout>

        <LinearLayout
            style="@style/AppTheme.CardViewRowItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/AppTheme.CardViewRowItemColumnLeft"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/ship_detail_card_role" />

            <TextView
                android:id="@+id/shipDetailCardRoleTextView"
                style="@style/AppTheme.CardViewRowItemColumnRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Racing / Interception" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>