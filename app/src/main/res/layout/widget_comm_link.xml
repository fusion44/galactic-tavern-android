<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.WidgetStyle">

    <TextView
        android:id="@+id/widgetHeader"
        style="@style/AppTheme.WidgetHeaderStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/widget_header_text"
        android:text="@string/widget_header_text" />

    <ListView
        android:id="@+id/widgetCommLinkList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widgetHeader"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp" />

</RelativeLayout>