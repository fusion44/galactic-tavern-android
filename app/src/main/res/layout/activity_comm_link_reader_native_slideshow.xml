<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:layout_widthPercent="@fraction/comm_link_reader_column_width_percent">

        <TextView
            android:id="@+id/commLinkWrapperHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/commLinkSlideshowRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/slideshow_total_height" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/commLinkWrapperTextBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </FrameLayout>
</android.support.percent.PercentFrameLayout>
