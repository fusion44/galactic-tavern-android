<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/card_view_margin_bottom"
    android:elevation="@dimen/card_view_rested_elevation_state"
    card_view:cardCornerRadius="@dimen/card_view_corner_radius">

    <LinearLayout
        android:id="@+id/shipDetailCardModularContentLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/shipDetailCardTitleTextView"
            style="@style/AppTheme.CardViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ship_detail_card_modular_title" />

    </LinearLayout>
</android.support.v7.widget.CardView>